<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <dl class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <dl class="dl-horizontal">
          <% if current_user %>
            <h3> Leave a Review!</h3>
            <%= form_for [@product, @review] do |f| %>
              <div class="form-group">
                <dt><%= f.label :rating %></dt>
                <dd><%= f.select :rating, [1, 2, 3, 4, 5], class: 'form-control' %></dd>
              </div>
              <div class="form-group">
                <dt><%= f.label :description %></dt>
                <dd><%= f.text_field :description, class: 'form-control' %></dd>
              </div>
              <dd><%= f.submit 'Submit Review', class: 'btn btn-primary' %></dd>
            <% end %>
          <% end %>
        </dl>
        <dl class="dl-horizontal">
          <h3>Reviews</h3>
          <% @product.reviews.reverse_each do |review| %>
            <div class="review">
              <dt>Name:</dt>
              <dd><%= review.user.name %></dd>
              <dt>Date:</dt>
              <dd><%= review.created_at.strftime('%B %d, %Y') %></dd>
              <dt>Rating:</dt>
              <dd><%= review.rating %>/5</dd>
              <dt>Comments:</dt>
              <dd><%= review.description %></dd>
              <% if review.user === current_user %>
                <dd><%= button_to "Delete Your Review", [@product, review], method: :delete, class: 'btn btn-danger'%></dd>
              <% end %>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </article>

  

</section>
